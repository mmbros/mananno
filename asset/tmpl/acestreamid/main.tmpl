{{define "channels"}}{{template "header" .}}
<h1>Acestreamid's Channels</h1>

<hr>
<p>Last Update: <b>{{ .LastUpdate.Format "02 January 15:04:05" }}</b></p>
<table class="schedule">
<thead>
<tr>
<th>Name</th>
<th>ID</th>
<th>Count</th>
</tr>
</thead>
<tbody>
{{ range .Channels -}}
<tr>
 <td><a href="/acestreamid/channels/{{ .ID  }}">{{ .Name }}</a></td>
 <td>{{ .ID }}</td>
 <td>{{ .Count }}</td>
</tr>
{{ end }}
</tbody>
</table>
{{template "footer"}}
{{end}}


{{define "channel"}}{{template "header" .}}
<h1>Acestreamid's Channel {{ .Name  }}</h1>

<hr>
<p>Last Update: <b>{{ .LastUpdate.Format "02 January 15:04:05" }}</b></p>
<p>Streams: <b>{{ len .Streams  }}</b></p>

<table class="schedule">
<thead>
<tr>
<th>Title</th>
<th>ID</th>
<th>Site</th>
<th>Time</th>
</tr>
</thead>
<tbody>
{{ range .Streams -}}
<tr>
 <td>{{ .Title }}</td>
 <td><a href="{{ .URL }}">{{ .ID }}</a></td>
 <td>{{ .Site }}</td>
 <td>{{ .Time }}</td>
</tr>
{{ end }}
</tbody>
</table>
{{template "footer"}}
{{end}}
